<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @schedule9 %>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @schedule9 do |f| %>
<table>
  <tr>
    <th><%= f.label :title ,"タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
 
  <tr>
    <th><%= f.label :first_date ,"開始日" %></th>
    <td><%= f.date_field :first_date %></td>
  </tr>
  
  <tr>
    <th><%= f.label :final_date ,"終了日" %></th>
    <td><%= f.date_field :final_date %></td>
    
  </tr>
 
  <tr>
    <th><%= f.label :all_day ,"終日" %></th>
    <td><%= f.check_box :all_day, {}, "1", "0" %>
    <br>終日の場合はチェックを入れます</td>
  </tr>
 
  <tr>
    <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
    <td><%= f.text_area :schedule_memo %></td>
  </tr>
</table>
 
<div>
  <ul>
    <li><%= f.submit "新規登録を完了する"%></li>
    <li><%= link_to "スケジュール一覧に戻る", :schedule9s %></li>
  </ul>
</div>
<% end %>